@model RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "_Layout";
}

<div class="container">
    <div id="loginbox" style="margin-top:50px;" class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-default">

            <img src="~/img/sitelogo.png" id="logo" />
            <div style="padding-top:30px" class="panel-body">

                <form class="form-horizontal" role="form" method="post" asp-antiforgery="true">
                    <div class="text-danger login-error" asp-validation-summary="ModelOnly"></div>

                    <div style="display:none" class="alert alert-danger col-sm-12"></div>

                    <span class="text-danger" asp-validation-for="Username"></span>
                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="fa fa-user"></i></span>
                        <input asp-for="Username" type="text" class="form-control" placeholder="Username">
                    </div>

                    <span class="text-danger" asp-validation-for="Email"></span>
                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                        <input asp-for="Email" type="email" class="form-control" placeholder="Email">
                    </div>

                    <span class="text-danger" asp-validation-for="Password"></span>
                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                    </div>

                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password">
                    </div>

                    <div style="margin-top:10px" class="form-group">
                        <div class="col-sm-12 controls">
                            <input type="submit" value="Create Account" class="btn btn-primary" />
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
