@model RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "_Layout";
}

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
<div class="container">
    <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-default">

            <img src="~/img/sitelogo.png" id="logo" />
            <div style="padding-top:30px" class="panel-body">
                <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>

                <form id="loginform" class="form-horizontal" asp-antiforgery="true" method="post" >

                    <div class="text-danger login-error" asp-validation-summary="ModelOnly"></div>

                    <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon" asp-validation-for="Username"><i class="fa fa-user"></i></span>
                        <input asp-for="Username" type="text" class="form-control" placeholder="Username">
                    </div>

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon" asp-validation-for="Email"><i class="fa fa-envelope"></i></span>
                        <input asp-for="Email" type="email" class="form-control" placeholder="Email">
                    </div>

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon" asp-validation-for="Password"><i class="fa fa-lock"></i></span>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                    </div>

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon" asp-validation-for="ConfirmPassword"><i class="fa fa-lock"></i></span>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password">
                    </div>


                    <div style="margin-top:10px" class="form-group">
                        <div class="col-sm-12 controls">
                            <input type="submit" value="Create Account" class="btn btn-primary" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
