@using TechTime.ViewModel
@model TechTime.ViewModel.JobEntryViewModel
@{
    ViewBag.Title = "Create Work Order";
}
@section Styles{

}
@section Scripts{
    <script>
        $(document).ready(function () {
            $.fn.editable.defaults.mode = 'popup';
            $('.customer').editable();
        });
    </script>
}

<div class="row">

    <form method="post" class="col-lg-4">
        <div asp-validation-summary="All"></div>
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-success">@ViewBag.Message</div>
        }
        <div class="form-group">
            <select class="form-control" asp-for="CustomerId">
                @foreach (var item in CustomerListViewModel.GetCustomerList())
            {
                    <option value="@item.CustomerId">@item.Name (@item.CustomerId)</option>
                }
            </select>
        </div>
            <div class="form-group">
                <label asp-for="Hours">Hours</label>
                <input type="number" step="0.25" asp-for="Hours" class="form-control" />
            </div>


            <div class="form-group">
                <label>WorkDescription</label>
                <textarea textarea asp-for="WorkDescription" class="form-control" rows="3"></textarea>
            </div>

            <div>
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>

</form>
</div>